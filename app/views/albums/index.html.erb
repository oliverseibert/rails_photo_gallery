<h1>Alben</h1>

<% if @albums.length > 0 %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Beschreibung</th>
      <th>Aktionen</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.description %></td>
        <td>
          <%= link_to 'Anzeigen', album, :class => "btn btn-primary btn-sm" %>
          <%= link_to 'Ändern', edit_album_path(album), :class => "btn btn-warning btn-sm" %>
          <%= link_to 'Löschen', album, method: :delete, data: { confirm: 'Album wirklich löschen?' }, :class => "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>Lege jetzt dein erstes Album an!</p>
<% end %>

<br>

<%= link_to 'Neues Album erstellen', new_album_path, :class => "btn btn-primary" %>

